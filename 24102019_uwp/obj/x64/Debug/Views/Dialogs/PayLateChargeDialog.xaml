<ContentDialog x:ConnectionId='1'
    x:Class="_24102019_uwp.Views.Dialogs.PayLateChargeDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_24102019_uwp.Views.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Total owned money: 15000"
    PrimaryButtonText="Pay Now"
    SecondaryButtonText="Cancel"
                                                         
                                                             >

    <StackPanel Margin="0,13,0,0">
        <TextBox x:ConnectionId='2' Name="inputMoney" PlaceholderText="Please input customer money here"                                  ></TextBox>
        <TextBlock x:ConnectionId='3' Name="txtReturn" Text="Return money: ---" Foreground="Red" Margin="0,12,0,0"></TextBlock>
    </StackPanel>
</ContentDialog>

