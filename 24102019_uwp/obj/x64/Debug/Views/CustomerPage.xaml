<Page x:ConnectionId='1'
    x:Class="_24102019_uwp.Views.CustomerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_24102019_uwp.Views"
    xmlns:model="using:_24102019_uwp.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        >

    <SplitView x:ConnectionId='2' IsPaneOpen="True"
           DisplayMode="Inline"
           PanePlacement="Right"
           OpenPaneLength="320"
           Name="splView">

        <SplitView.Pane>
            <StackPanel>
                <TextBlock FontWeight="Bold" Margin="24,32,0,0">
                    Customer ID
                </TextBlock>
                <TextBox x:ConnectionId='3' Margin="24,12,22,0" PlaceholderText="ID will be generated" IsEnabled="False" Name="Id"/>

                <TextBlock FontWeight="Bold" Margin="24,24,0,0">
                    Name
                </TextBlock>
                <TextBox x:ConnectionId='4' Margin="24,12,22,0" PlaceholderText="Please input customer name" Name="Name"/>

                <TextBlock FontWeight="Bold" Margin="24,24,0,0">
                    Phone
                </TextBlock>
                <TextBox x:ConnectionId='5' Margin="24,12,22,0" PlaceholderText="Please input customer phone" Name="Phone"/>

                <TextBlock FontWeight="Bold" Margin="24,24,0,0">
                    Address
                </TextBlock>
                <TextBox x:ConnectionId='6' Margin="24,12,22,0" PlaceholderText="Please input customer address" Name="Address"/>

                <Button x:ConnectionId='7' Margin="24,24,0,0" Name="BtnSave"             >Save</Button>

            </StackPanel>
        </SplitView.Pane>

        <StackPanel Padding="24">

            <TextBlock FontWeight="Bold" Margin="0,8,0,0">
                Find customers
            </TextBlock>

            <AutoSuggestBox x:ConnectionId='8'
                    x:Name="autobox"
                    PlaceholderText="Enter Customer ID or Customer Name"
                    Width="300"
                    HorizontalAlignment="Left"
                    QueryIcon="Find" VerticalAlignment="Top" 
                    Margin="0,12,0,0"
                                                      />

            <CommandBar x:ConnectionId='9' DefaultLabelPosition="Right" Background="White" Name="cmdbar" Margin="0,24,0,0">
                <AppBarButton x:ConnectionId='16' Icon="Add" Label="Add"             Name="BtnAdd"/>
                <AppBarButton x:ConnectionId='17' Icon="Edit" Label="Modify"                Name="BtnModify"/>
                <AppBarButton x:ConnectionId='18' Icon="Delete" Label="Delete"                Name="BtnDelete"/>
                <AppBarButton x:ConnectionId='19' Icon="Refresh" Label="Refresh"                 Name="BtnRefresh"                                           />
                <CommandBar.Content>
                    <TextBlock Text="List of customers" Margin="0,9" FontWeight="Bold"/>
                </CommandBar.Content>
            </CommandBar>

            <ListView x:ConnectionId='10'                                    Margin="0,24,0,0" Name="lvCustomer"                                               >
                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <Grid Padding="12" Background="{ThemeResource SystemBaseLowColor}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Name" Style="{ThemeResource CaptionTextBlockStyle}"/>
                            <TextBlock Grid.Column="1" Text="Phone" Style="{ThemeResource CaptionTextBlockStyle}"/>
                            <TextBlock Grid.Column="2" Text="Address" Style="{ThemeResource CaptionTextBlockStyle}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.HeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate x:Name="TableDataTemplate"                            >
                        <Grid x:ConnectionId='12' Height="48"                                           Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:ConnectionId='13'  Style="{ThemeResource BaseTextBlockStyle}"                      HorizontalAlignment="Stretch"/>
                            <TextBlock x:ConnectionId='14' Grid.Column="1"                       HorizontalAlignment="Stretch" />
                            <TextBlock x:ConnectionId='15' Grid.Column="2"                         HorizontalAlignment="Stretch"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </StackPanel>
    </SplitView>
</Page>

