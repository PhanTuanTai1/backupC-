<Page x:ConnectionId='1'
    x:Class="_24102019_uwp.Views.IndividualPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_24102019_uwp.Views"
    xmlns:model="using:_24102019_uwp.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <SplitView x:ConnectionId='2' IsPaneOpen="True"
           DisplayMode="Inline"
           PanePlacement="Right"
           OpenPaneLength="320"
           Name="splView">

        <SplitView.Pane>
            <StackPanel>
                <TextBlock FontWeight="Bold" Margin="24,32,0,0">
                    Select Status
                </TextBlock>
                <ComboBox x:ConnectionId='3' Name="cbStatus"                                                    PlaceholderText="Pick a title" Width="272" Margin="0,12,0,0" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <x:String>Rented</x:String>
                    <x:String>On Shelf</x:String>
                    <x:String>On Hold</x:String>
                    <x:String>In Stock</x:String>
                </ComboBox>
                <TextBlock FontWeight="Bold" Margin="24,32,0,0">
                    Select Title
                </TextBlock>
                <ComboBox x:ConnectionId='4' Name="cbTitle"                                              PlaceholderText="Pick a title" Width="272" Margin="0,12,0,0" HorizontalAlignment="Center" VerticalAlignment="Top">
                </ComboBox>

                <TextBlock FontWeight="Bold" Margin="24,24,0,0">Number of copy</TextBlock>
                <TextBox x:ConnectionId='5' IsEnabled="False" Name="diskCount" Margin="24,12,22,0" PlaceholderText="Please input name"/>

                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='9' Name="btnCancel" IsEnabled="False" Margin="24,24,0,0"               >Cancel</Button>
                    <Button x:ConnectionId='10' Name="btnSave" IsEnabled="False" Margin="24,24,0,0"             >Save</Button>
                </StackPanel>

                <TextBlock FontWeight="Bold" Margin="24,48,0,0">
                    Checkout Status
                </TextBlock>
                <TextBlock x:ConnectionId='6' Name="status" Margin="24,12,0,0" Foreground="Green">

                </TextBlock>

                <TextBlock FontWeight="Bold" Margin="24,24,0,0">
                    Rent by
                </TextBlock>
                <HyperlinkButton x:ConnectionId='7' Name="userRent" Margin="24,12,0,0">
                </HyperlinkButton>

                <TextBlock FontWeight="Bold" Margin="24,24,0,0">
                    Due date
                </TextBlock>
                <TextBlock x:ConnectionId='8' Name="dueDate" Margin="24,12,0,0">
                </TextBlock>
            </StackPanel>
        </SplitView.Pane>

        <StackPanel Padding="24">

            <TextBlock FontWeight="Bold" Margin="0,8,0,0">
                Find title
            </TextBlock>
            <AutoSuggestBox x:ConnectionId='11'
                    x:Name="autobox"
                    PlaceholderText="Type Disk ID and Enter"
                    Width="300"
                    HorizontalAlignment="Left"
                    QueryIcon="Find" VerticalAlignment="Top" 
                    Margin="0,12,0,0"                                        />


            <CommandBar x:ConnectionId='12' DefaultLabelPosition="Right" Background="White" Name="cmdbar" Margin="0,24,0,0">
                <AppBarButton x:ConnectionId='20' Icon="Add" Label="Add"             Name="BtnAdd"/>
                <AppBarButton x:ConnectionId='21' Icon="Delete" Label="Delete"                Name="BtnDelete"/>
                <AppBarButton x:ConnectionId='22' Icon="Refresh" Label="Refresh"                 Name="BtnRefresh"                                           />
                <CommandBar.Content>
                    <TextBlock Text="List of disks" Margin="0,9" FontWeight="Bold"/>
                </CommandBar.Content>
            </CommandBar>
            <ScrollViewer Height="700">
                <ListView x:ConnectionId='13'                               Margin="0,24,0,0" Name="lvDisk"                                           >
                    <ListView.HeaderTemplate>
                        <DataTemplate>
                            <Grid Padding="12" Background="{ThemeResource SystemBaseLowColor}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Disk ID" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                <TextBlock Grid.Column="1" Text="Title Name" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                <TextBlock Grid.Column="2" Text="Status" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                <TextBlock Grid.Column="4" Text="Price" Style="{ThemeResource CaptionTextBlockStyle}"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.HeaderTemplate>
                    <ListView.ItemTemplate>
                        <DataTemplate x:Name="TableDataTemplate"                              >
                            <Grid x:ConnectionId='15' Height="48"                                             Padding="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:ConnectionId='16' Grid.Column="0"                        HorizontalAlignment="Stretch" />
                                <TextBlock x:ConnectionId='17' Grid.Column="1"                           HorizontalAlignment="Stretch" />
                                <TextBlock x:ConnectionId='18' Grid.Column="2"                              HorizontalAlignment="Stretch"/>
                                <TextBlock x:ConnectionId='19' Grid.Column="4"                       HorizontalAlignment="Stretch" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

            </ScrollViewer>
        </StackPanel>
    </SplitView>
</Page>

