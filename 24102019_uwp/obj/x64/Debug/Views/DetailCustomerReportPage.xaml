<Page
    x:Class="_24102019_uwp.Views.DetailCustomerReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_24102019_uwp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <RelativePanel>

            <HyperlinkButton x:ConnectionId='2' x:Name="btnAddToDo"
                Margin="24,32,24,24"
                Content="Back to customer report page"
                RelativePanel.AlignTopWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                                        />

            <StackPanel Margin="24,32,24,24">

                <TextBlock FontWeight="Bold">
                    Name
                </TextBlock>

                <TextBlock Margin="0,12,0,0">
                    Nguyễn Lê Nam Anh
                </TextBlock>

                <TextBlock FontWeight="Bold" Margin="0,24,0,0">
                    Phone
                </TextBlock>

                <TextBlock Margin="0,12,0,0">
                    +84703620282
                </TextBlock>

                <TextBlock FontWeight="Bold" Margin="0,24,0,0">
                    Address
                </TextBlock>

                <TextBlock Margin="0,12,0,0">
                    3298 Pinchelone Street, Chesapeake, Virginia
                </TextBlock>

                <TextBlock FontWeight="Bold" Margin="0,24,0,0">
                    Total number of DVDs/disks the customer currently has out
                </TextBlock>

                <TextBlock Margin="0,12,0,0">
                    3
                </TextBlock>

                <TextBlock FontWeight="Bold" Margin="0,24,0,0">
                    The total amount of all fines
                </TextBlock>

                <TextBlock Margin="0,12,0,0" Foreground="Red">
                    $1500
                </TextBlock>

                <TextBlock FontWeight="Bold" Margin="0,48,0,0">
                    List of overdue DVDs or disks
                </TextBlock>

                <ListView x:ConnectionId='3' x:Name="Fruits" Margin="0,24,0,0">
                    <x:String>Apricot</x:String>
                    <x:String>Banana</x:String>
                    <x:String>Cherry</x:String>
                    <x:String>Orange</x:String>
                    <x:String>Strawberry</x:String>
                </ListView>

                <TextBlock FontWeight="Bold" Margin="0,48,0,0">
                    List of fines currently owed
                </TextBlock>

                <ListView Margin="0,24,0,0">
                    <x:String>Apricot</x:String>
                    <x:String>Banana</x:String>
                    <x:String>Cherry</x:String>
                    <x:String>Orange</x:String>
                    <x:String>Strawberry</x:String>
                </ListView>

            </StackPanel>
        </RelativePanel>
    </ScrollViewer>
</Page>

