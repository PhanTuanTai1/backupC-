<Page
    x:Class="_24102019_uwp.Views.DetailCustomerReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_24102019_uwp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:_24102019_uwp.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel>

            <HyperlinkButton x:ConnectionId='2' x:Name="btnAddToDo"
                Margin="24,32,24,24"
                Content="Back to customer report page"
                RelativePanel.AlignTopWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                                        />

            <StackPanel Margin="24,32,24,24">

                <TextBlock FontWeight="Bold">
                    Name
                </TextBlock>

                <TextBlock x:ConnectionId='3' Name="Name" Margin="0,12,0,0">
                    Nguyễn Lê Nam Anh
                </TextBlock>

                <TextBlock FontWeight="Bold" Margin="0,24,0,0">
                    Phone
                </TextBlock>

                <TextBlock x:ConnectionId='4' Name="Phone" Margin="0,12,0,0">
                    +84703620282
                </TextBlock>

                <TextBlock FontWeight="Bold" Margin="0,24,0,0">
                    Address
                </TextBlock>

                <TextBlock x:ConnectionId='5' Name="Address" Margin="0,12,0,0">
                    3298 Pinchelone Street, Chesapeake, Virginia
                </TextBlock>

                <TextBlock FontWeight="Bold" Margin="0,24,0,0">
                    Total number of DVDs/disks the customer currently has out
                </TextBlock>

                <TextBlock x:ConnectionId='6' Name="TotalDiskOut" Margin="0,12,0,0">
                    3
                </TextBlock>

                <TextBlock FontWeight="Bold" Margin="0,24,0,0">
                    The total amount of all fines
                </TextBlock>

                <TextBlock x:ConnectionId='7' Name="TotalPrice" Margin="0,12,0,0" Foreground="Red">
                    $1500
                </TextBlock>
                <TextBlock FontWeight="Bold" Margin="0,48,0,0">
                    List of fines currently owed
                </TextBlock>

                <ListView x:ConnectionId='8' Margin="0,24,0,0" Name="lvDisk">
                    <ListView.HeaderTemplate>
                        <DataTemplate>
                            <Grid Padding="12" Background="{ThemeResource SystemBaseLowColor}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Disk ID" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                <TextBlock Grid.Column="1" Text="Title Name" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                <TextBlock Grid.Column="2" Text="Due Date" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                <TextBlock Grid.Column="3" Text="Return Date" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                <TextBlock Grid.Column="4" Text="Price" Style="{ThemeResource CaptionTextBlockStyle}"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.HeaderTemplate>
                    <ListView.ItemTemplate>
                        <DataTemplate >
                            <Grid Height="48" Padding="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="{Binding DiskID}" HorizontalAlignment="Stretch" />
                                <TextBlock Grid.Column="1" Text="{Binding TitleName}" HorizontalAlignment="Stretch" />
                                <TextBlock Grid.Column="2" Text="{Binding DueDate}" HorizontalAlignment="Stretch"/>
                                <TextBlock Grid.Column="3" Text="{Binding ReturnDate}" HorizontalAlignment="Stretch" />
                                <TextBlock Grid.Column="4" Text="{Binding Price}" HorizontalAlignment="Stretch" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
                <TextBlock FontWeight="Bold" Margin="0,48,0,0">
                    List of overdue DVDs or disks
                </TextBlock>

                <ListView x:ConnectionId='9' Margin="0,24,0,0" Name="lvLateCharge">
                    <ListView.HeaderTemplate>
                        <DataTemplate>
                            <Grid Padding="12" Background="{ThemeResource SystemBaseLowColor}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Disk ID" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                <TextBlock Grid.Column="1" Text="Title Name" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                <TextBlock Grid.Column="2" Text="Due Date" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                <TextBlock Grid.Column="3" Text="Return Date" Style="{ThemeResource CaptionTextBlockStyle}"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.HeaderTemplate>
                    <ListView.ItemTemplate>
                        <DataTemplate x:Name="TableDataTemplate">
                            <Grid Height="48" Padding="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="{Binding DiskID}" HorizontalAlignment="Stretch" />
                                <TextBlock Grid.Column="1" Text="{Binding Title}" HorizontalAlignment="Stretch" />
                                <TextBlock Grid.Column="2" Text="{Binding dueDate}" HorizontalAlignment="Stretch"/>
                                <TextBlock Grid.Column="3" Text="{Binding returnDate}" HorizontalAlignment="Stretch" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>


            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

