<Page
    x:Class="_24102019_uwp.Views.ReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_24102019_uwp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Padding="24,32,24,24">
        <TextBlock FontWeight="Bold" Margin="0">
             Select report type
        </TextBlock>
        <ComboBox x:ConnectionId='2' Name="cbReports" PlaceholderText="Select report type" Width="272" Margin="0,12,0,0"                                             >
            <x:String>Customer report</x:String>
            <x:String>Title report</x:String>
        </ComboBox>

        <ScrollViewer Margin="0,48,0,0">
            <Frame x:ConnectionId='3' x:Name="frmContent">

            </Frame>
        </ScrollViewer>
    </StackPanel>
</Page>

